@section Categories{
    @await Component.InvokeAsync("Categories")
}
<div class="card mb-3">
<div class="row no-gutter" >
    <div class="col-md-3">
        <img src="~/img/@Model.ImageUrl" class="card-img" alt="">
    </div>
    <div class="col-md-9">
        <div class="card-body">
            <div class="card-title">
                <h5 class="card-title">
                    @Model.Name
                </h5>
                <p class="card-text">
                    @Model.Description
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        3 days ago
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>
</div>
   