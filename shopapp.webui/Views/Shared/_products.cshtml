@model Product
<div class="col-md-3">
    <div class="card mb-2">
        <img src="~/img/@Model.ImageUrl" alt="" class="card-img-top">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-primary">Ä°ncele</a>
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
           
           <form action="/product/delete" method="POST">
               <input type="hidden" name="ProductId" value="@Model.ProductId">
            <button type="submit" class="btn btn-danger">Delete</button>

           </form>


        </div>
    </div>
</div>